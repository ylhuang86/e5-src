doctype html
html
  head
    title= 'Blog'
    meta(charset='utf-8')
    link(rel='stylesheet', href='/css/bootstrap.css')
  body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          a.brand(href='/') Blog
    .wrap
      .container
        .row
          .span8
            br
            h4 Hi, Lens
            block content
          .span3
            br
            input(type = "button", value="發表新文章", "onclick" = "location.href='http://localhost:8080/posting'")
            br
            input(type = "button", value="登出", "onclick" = "location.href='http://localhost:8080/logout'")
            .well.sidebar-nav
              ul.nav.nav-list
                li.nav-header categories
                - each cat in getCategories()
                  li
                    a(href=categoryURL(cat)) #{cat}
                li.nav-header tags
                - each tag in getTags()
                  li
                    a(href=tagURL(tag)) #{tag}
